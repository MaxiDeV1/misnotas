<!DOCTYPE html>
<html>
<head>
  <title>Ingreso de Datos</title>
</head>
<body>
  <h1>Ingreso de Datos</h1>
  
  <form action="" method="POST">
    <label for="dni">ID_Alumno:</label>
    <input type="text" id="dni" name="dni" required><br><br>

    <label for="nombre">Nombre:</label>
    <input type="text" id="nombre" name="nombre" required><br><br>

    <label for="apellido">Apellido:</label>
    <input type="text" id="apellido" name="apellido" required><br><br>

    <label for="edad">Edad:</label>
    <input type="number" id="edad" name="edad" required><br><br>

    <label for="idCurso">ID_Curso:</label>
    <input type="text" id="idCurso" name="idCurso" required><br><br>

    <label for="cicloLectivo">Ciclo Lectivo:</label>
    <input type="text" id="cicloLectivo" name="cicloLectivo" required><br><br>

    <label for="orientacion">Orientación:</label>
    <input type="text" id="orientacion" name="orientacion" required><br><br>

    <label for="password">Contraseña:</label>
    <input type="password" id="password" name="password" required><br><br>
    <div class="errores">
      <% if (locals.errors) { %>
        <% errors.forEach(err => { %>
          <small><%= err.msg %></small>
        <% }) %>
      <% } %>
    </div>
    <input type="submit" value="Guardar">
  </form>
</body>
</html>
